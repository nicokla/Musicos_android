<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFrag">

    <fragment
        android:id="@+id/MySongsFragment"
        android:name="nicokla.com.musicos.MySongsFrag.MySongsFragment"
        android:label="Home"
        tools:layout="@layout/fragment_my_songs"/>
    <fragment
        android:id="@+id/searchYtbFragment"
        android:name="nicokla.com.musicos.SearchYtbFrag.SearchYtbFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search_ytb">
        <action
            android:id="@+id/confirmVideo"
            app:destination="@id/playerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/MySongsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="nicokla.com.musicos.PlayerFrag.PlayerFragment"
        android:label="Play"
        tools:layout="@layout/fragment_player">
        <argument
            android:name="videoId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="nicokla.com.musicos.navigation.SearchFragment"
        android:label="Search" />
    <fragment
        android:id="@+id/addSongFragment"
        android:name="nicokla.com.musicos.navigation.AddSongFragment"
        android:label="Add song" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="nicokla.com.musicos.navigation.SettingsFragment"
        android:label="Settings" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="nicokla.com.musicos.navigation.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/seeVideo"
            app:destination="@id/playerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/newSong"
            app:destination="@id/searchYtbFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/signInFrag"
        android:name="nicokla.com.musicos.Login.SignInFrag"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFrag_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_signInFrag_to_signUpFrag"
            app:destination="@id/signUpFrag" />
    </fragment>
    <fragment
        android:id="@+id/signUpFrag"
        android:name="nicokla.com.musicos.Login.SignUpFrag"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFrag_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_signUpFrag_to_signInFrag"
            app:destination="@id/signInFrag" />
    </fragment>
</navigation>